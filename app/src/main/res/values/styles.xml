<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->

        <item name="colorPrimary">@color/light_green_500</item>
        <!--   darker variant of colorPrimary (for status bar, contextual app bars) -->
        <item name="colorPrimaryDark">@color/light_green_700</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="colorAccent">@color/accent_400</item>
        <!--<item name="android:alertDialogTheme">@style/AlertDialog</item>-->

        <!-- remove action bar for toolbar instead -->
        <item name="android:windowActionBar">false</item>
        <!--    Color of the name in the toolbar -->
        <item name="android:actionMenuTextColor">@color/black</item>
        <!-- Color of the overflow icon (three vertical dots) -->
        <item name="android:textColorSecondary">@color/black</item>

    </style>

</resources>
